<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_wallet"
    app:startDestination="@id/navigation_scan_wallet">

    <fragment
        android:id="@+id/navigation_scan_wallet"
        android:name="com.englizya.wallet.ScanWalletFragment"
        tools:layout="@layout/fragment_scan_wallet">

        <argument android:name="{category}" />
        <argument android:name="{quantity}" />
        <deepLink app:uri="EnglizyaPay://scan-wallet//{category}//{quantity}" />
    </fragment>

    <fragment
        android:id="@+id/navigation_verify_wallet_otp"
        android:name="com.englizya.wallet.VerifyWalletOtpFragment"
        tools:layout="@layout/fragment_veify_otp">

        <argument android:name="redirect" />
        <deepLink app:uri="EnglizyaPay://wallet-otp/{redirect}" />
    </fragment>


    <fragment
        android:id="@+id/navigation_select_ticket"
        android:name="com.englizya.wallet.short_ticket.SelectTicketFragment"
        tools:layout="@layout/fragment_select_ticket">

        <argument android:name="redirect" />
        <deepLink app:uri="EnglizyaPay://select-ticket/{redirect}" />
    </fragment>


    <fragment
        android:id="@+id/navigation_booking"
        android:name="com.englizya.wallet.long_ticket.BookingFragment"
        tools:layout="@layout/fragment_booking">

        <argument android:name="redirect" />
        <deepLink app:uri="EnglizyaPay://booking/{redirect}" />
    </fragment>
</navigation>