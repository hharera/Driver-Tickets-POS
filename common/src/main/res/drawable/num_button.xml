<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/red_500" />
            <padding android:left="@dimen/_20sdp" android:right="@dimen/_20sdp" />
            <corners android:radius="@dimen/_150sdp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:width="1dp" android:color="@color/red_500" />
            <padding android:left="@dimen/_20sdp" android:right="@dimen/_20sdp" />
            <corners android:radius="@dimen/_150sdp" />
        </shape>
    </item>
</selector>